.col-xs-6.col-xs-offset-3
  .jumbotron
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, placeholder: "email address", class: "form-control"
      .form-group
        = f.password_field :password, autocomplete: "off", placeholder: '&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;'.html_safe, class: "form-control"
      .form-group
        = f.password_field :password_confirmation, autocomplete: "off" , placeholder: '&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;'.html_safe, class: "form-control"
        = f.collection_check_boxes(:roles, ['Tourist', 'Tour Guide', 'Translator'], :to_s, :to_s) do |box|
          = box.label(class: 'checkbox-inline disabled normal-label') do
            = box.check_box
            = box.text
      .button-group
        = f.button class: "btn btn-primary", id: 'signup-button' do 
          Sign Up
    = render "devise/shared/links"

