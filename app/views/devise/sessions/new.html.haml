.col-xs-6.col-xs-offset-3
  .jumbotron
    %h2{id: 'login-text'} Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.email_field :email, autofocus: true, :placeholder => "email address",
          class: "form-control"
      .form-group
        = f.password_field :password, :placeholder => '&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;'.html_safe,  autocomplete: "off", class: "form-control"
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "Forgot your password?", new_password_path(resource_name), id: "pas_forgot"
      - if devise_mapping.rememberable?
        .button-group
          = f.button class: "btn btn-primary", id: 'login-button' do 
            Log In
            %i.fa.fa-lg.fa-long-arrow-right.pull-right
          = f.check_box :remember_me, class: "checkbox-inline"
          = f.label :remember_me
    = render "devise/shared/links"
