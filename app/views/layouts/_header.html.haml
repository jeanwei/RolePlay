%nav.menu.navbar.navbar-default.navbar-fixed-top{ data: { spy: "scroll" } }
  .container
    .navbar-header
      = link_to 'PlayGround', root_path, { class: 'navbar-brand' }
    .navbar-collapse.collapse#navbar
      %ul.nav.navbar-nav
        %li.menu-item
          = link_to('Home', homepage_path(current_user))
      %ul.nav.navbar-nav.navbar-right
        - if !user_signed_in?
          %li
            .button-menu
              = link_to 'Sign Up', new_user_registration_path, role: 'button', class: 'btn btn-default btn-xs'
          %li
            .button-menu
              = link_to 'Log In', new_user_session_path, :role => 'button', :class => 'btn btn-default btn-xs'
        - else
          %li
            .navbar-text
              Hello, #{current_user.email}
          %li
            .button-menu
              = link_to 'Log Out', destroy_user_session_path, :role => 'button', method: :delete, :class => 'btn btn-default btn-xs'


